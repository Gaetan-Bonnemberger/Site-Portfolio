{% extends 'base.html.twig' %}

{% block title %}Gaetan Bonnemberger - contact{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="wrapper-contact">

    {# Coté gauche #}
    <div class="left">
    <h1>Bienvenue</h1>
        <div class="portrait">

            <img id="portrait" src="{{ asset('assets/images/portrait.jpg') }}" alt="photo-portrait" class="mb-3">
            <div class="nom">
                <h3>Gaetan Bonnemberger</h3>
                <p class="P1"><b>Diplomé du titre professionnel</b></p>
                <p class="P2">Développeur Web et Web Mobile</p>
                <p class="P3">O'clock</p>
            </div>
        </div>
    </div>

    {# Coté droit #}
    <div class="right">
    <h1>Formulaire de contact</h1>
    <p>N'hesitez pas à me contacter pour vos projets professionnels</p>

    <div class="contact">
        {{ form_start(our_form) }}
        {{ form_widget(our_form) }}
        {{ form_end(our_form) }}
    </div>
    <a href="{{ path('portfolio') }}" class="btn btn-primary w=50% mb-3">Retour à l'acceuil</a>
</div>
{% endblock %}
